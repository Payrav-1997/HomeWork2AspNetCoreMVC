@model List<Leson2AspNetCoreMVC.Models.Person>
@{
    ViewData["Title"] = " person list";
}

<h4 class="text-info">List of person</h4>
    <a class="btn btn-primary"asp-area=""asp-controller="Person"asp-action="Add">Add</a>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>MiddleName</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count>0)
            {
                foreach (var person in Model)
                {
            <tr>
                <td>@person.Id</td>
                <td>@person.LastName</td>
                <td>@person.FirstName</td>
                <td>@person.MiddleName</td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center"colspan="5">empty</td>
                </tr>
            }
        </tbody>
    </table>

